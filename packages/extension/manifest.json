{
  "manifest_version": 3,
  "name": "Curiosity Engine Clipper",
  "version": "1.0",
  "description": "Clip travel answers from Perplexity and send to Curiosity Engine backend",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "*://*.perplexity.ai/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.perplexity.ai/*"],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "your-extension-id@example.com",
      "strict_min_version": "109.0"
    }
  }
} 