{
  "manifest_version": 3,
  "name": "Curiosity Engine",
  "version": "1.0.0",
  "description": "Enhance your AI chat experience with powerful content clipping and analysis",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "https://perplexity.ai/*",
    "https://www.perplexity.ai/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://perplexity.ai/*",
        "https://www.perplexity.ai/*"
      ],
      "js": ["assets/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": ["sidepanel.html"],
    "matches": ["<all_urls>"]
  }],
  "browser_specific_settings": {
    "gecko": {
      "id": "your-extension-id@example.com",
      "strict_min_version": "109.0"
    }
  }
} 